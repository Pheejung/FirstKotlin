<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/tallField"
            android:hint="키를 입력하세요" android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/weightField"
            android:hint="몸무게를 입력하세요" android:layout_marginStart="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tallField"/>
    <TextView
            android:text="키와 몸무게를 입력 후 BMI 버튼을 눌러주세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultLabel" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.014" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/bmiButton"/>
    <TextView
            android:text="cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/tallField"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/weightField"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <Button
            android:text="BMI 계산"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmiButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="160dp" android:layout_marginStart="160dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.006" android:layout_marginBottom="268dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>